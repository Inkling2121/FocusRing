{
  "name": "focusring",
  "version": "0.1.0",
  "description": "FocusRing â€“ Desktop Overlay fuer Notizen/Timer/Reminder",
  "main": "electron/main.js",
  "author": "Noah Wirth",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV=1 electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer",          
    "dist": "npm run build:renderer && electron-builder"
  },
  "build": {
    "appId": "ch.noahwirth.focusring",
    "productName": "FocusRing",
    "files": [
      "dist/**",           
      "electron/**",      
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
