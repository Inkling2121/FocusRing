{
  "name": "focusring",
  "version": "1.0.0",
  "description": "FocusRing â€“ Desktop Overlay fuer Notizen/Timer/Reminder",
  "main": "electron/main.js",
  "type": "module",
  "author": "Noah Wirth",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on --timeout 30000 --delay 1000 http-get://127.0.0.1:5173 && cross-env VITE_DEV=1 electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer",
    "dist": "npm run build:renderer && electron-builder",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:linux": "npm run build:renderer && electron-builder --linux"
  },
  "build": {
    "appId": "ch.noahwirth.focusring",
    "productName": "FocusRing",
    "publish": null,
    "files": [
      "dist/renderer/**",
      "electron/**",
      "!electron/**/*.map",
      "node_modules/sql.js/dist/sql-wasm.js",
      "node_modules/sql.js/dist/sql-wasm.wasm",
      "node_modules/marked/lib/marked.cjs",
      "node_modules/marked/lib/marked.umd.js",
      "node_modules/marked/package.json",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/sql.js/dist/*.wasm"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "differentialPackage": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "Noah Wirth"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "asar": true
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.6.0",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "wait-on": "^9.0.3"
  }
}
